strings.xml:

    <string-array name="rasa">
        <item>--Wybierz rase--</item>
        <item>Krasnal</item>
        <item>Rzeźnik</item>
        <item>Czlowiek</item>
        <item>Elf</item>
    </string-array>

postac.java:

import java.util.ArrayList;

public class Postac {
    String imie;
    String pucie;
    String rasa;
    ArrayList<String> umiejetnosci;

    public Postac(String imie, String pucie, String rasa, ArrayList<String> umiejetnosci){
        this.imie = imie;
        this.pucie = pucie;
        this.rasa = rasa;
        this.umiejetnosci = umiejetnosci;
    }
}

main.java:

import android.os.Bundle;
import android.view.View;
import android.widget.AdapterView;
import android.widget.ArrayAdapter;
import android.widget.Button;
import android.widget.CheckBox;
import android.widget.EditText;
import android.widget.RadioButton;
import android.widget.RadioGroup;
import android.widget.Spinner;
import android.widget.TextView;
import android.widget.Toast;

import androidx.activity.EdgeToEdge;
import androidx.appcompat.app.AppCompatActivity;
import androidx.core.graphics.Insets;
import androidx.core.view.ViewCompat;
import androidx.core.view.WindowInsetsCompat;

import java.util.ArrayList;

public class MainActivity extends AppCompatActivity {
    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        EdgeToEdge.enable(this);
        setContentView(R.layout.activity_main);
        ViewCompat.setOnApplyWindowInsetsListener(findViewById(R.id.main), (v, insets) -> {
            Insets systemBars = insets.getInsets(WindowInsetsCompat.Type.systemBars());
            v.setPadding(systemBars.left, systemBars.top, systemBars.right, systemBars.bottom);
            return insets;
        });
        // CheckBox umiejętności
        CheckBox wlamywacz = findViewById(R.id.umiejetnosc1);
        CheckBox alchemia = findViewById(R.id.umiejetnosc2);
        CheckBox kowalstwo = findViewById(R.id.umiejetnosc3);

        //RadioButton puc
        RadioButton pucMenska = findViewById(R.id.pucMenska);
        RadioButton pucDamska = findViewById(R.id.pucDamska);

        //Spinner rasa
        Spinner rasa = findViewById(R.id.rasa);
        String wybranaRasa = rasa.getSelectedItem().toString();

        //EditText imie
        EditText imie = findViewById(R.id.imie);


        wlamywacz.setOnClickListener(v -> {
            //aktualizujUmiejetnosc();
            int zaznaczone = policzZaznaczone(wlamywacz, alchemia, kowalstwo);

            // Próba wybrania 3 checkboxa
            if (zaznaczone > 2) {
                wlamywacz.setChecked(false);
                Toast.makeText(this, "Możesz wybrać maksymalnie 2 umiejętności!", Toast.LENGTH_SHORT).show();
                return; // ← Zatrzymujemy, żeby NIE pokazywać normalnego powiadomienia
            }

            // Normalne powiadomienie
            if (wlamywacz.isChecked()) {
                Toast.makeText(this, "Umiejętność Włamywacz została wybrana", Toast.LENGTH_SHORT).show();
            } else {
                Toast.makeText(this, "Umiejętność Włamywacz nie została wybrana", Toast.LENGTH_SHORT).show();
            }
        });

        alchemia.setOnClickListener(v -> {
            //aktualizujUmiejetnosc();
            int zaznaczone = policzZaznaczone(wlamywacz, alchemia, kowalstwo);

            if (zaznaczone > 2) {
                alchemia.setChecked(false);
                Toast.makeText(this, "Możesz wybrać maksymalnie 2 umiejętności!", Toast.LENGTH_SHORT).show();
                return;
            }

            if (alchemia.isChecked()) {
                Toast.makeText(this, "Umiejętność Alchemia została wybrana", Toast.LENGTH_SHORT).show();
            } else {
                Toast.makeText(this, "Umiejętność Alchemia nie została wybrana", Toast.LENGTH_SHORT).show();
            }
        });

        kowalstwo.setOnClickListener(v -> {
            //aktualizujUmiejetnosc();
            int zaznaczone = policzZaznaczone(wlamywacz, alchemia, kowalstwo);

            if (zaznaczone > 2) {
                kowalstwo.setChecked(false);
                Toast.makeText(this, "Możesz wybrać maksymalnie 2 umiejętności!", Toast.LENGTH_SHORT).show();
                return;
            }

            if (kowalstwo.isChecked()) {
                Toast.makeText(this, "Umiejętność Kowalstwo została wybrana", Toast.LENGTH_SHORT).show();
            } else {
                Toast.makeText(this, "Umiejętność Kowalstwo nie została wybrana", Toast.LENGTH_SHORT).show();
            }
        });


        // Obsługa wyboru puci
        pucMenska.setOnClickListener(v -> {
            //aktualizujUmiejetnosc();
        });

        pucDamska.setOnClickListener(v -> {
            //aktualizujUmiejetnosc();
        });


        // Przycisk Resetuj
        Button resetuj = findViewById(R.id.resetuj);
        resetuj.setOnClickListener(v -> {
            wlamywacz.setChecked(false);
            alchemia.setChecked(false);
            kowalstwo.setChecked(false);
            pucMenska.setChecked(false);
            pucDamska.setChecked(false);
            imie.setText("");

            //Reset spinnera do wartości domyślnej
            rasa.setSelection(0);
        });


        // Przycisk Stwórz postać
        Button stworzPostac = findViewById(R.id.stworzPostac);
        TextView wynik = findViewById(R.id.wynik);

        stworzPostac.setOnClickListener(v -> {

            //Pobieranie danych
            String wpisaneImie = imie.getText().toString().trim();

            // Walidacja imienia
            if (wpisaneImie.isEmpty()) {
                Toast.makeText(this, "Imię nie może być puste!", Toast.LENGTH_SHORT).show();
                return;
            }


            // Pobranie płci
            String pucie = "";
            if (pucMenska.isChecked()) pucie = "Męska";
            else if (pucDamska.isChecked()) pucie = "Damska";
            else {
                Toast.makeText(this, "Wybierz płeć!", Toast.LENGTH_SHORT).show();
                return;
            }

            //Pobieranie umiejętności
            ArrayList<String> umiejetnosci = new ArrayList<>();

            if (wlamywacz.isChecked()) umiejetnosci.add("Włamywacz");
            if (alchemia.isChecked()) umiejetnosci.add("Alchemia");
            if (kowalstwo.isChecked()) umiejetnosci.add("Kowalstwo");

            //Utworzenie obiektu
            Postac postac = new Postac(wpisaneImie, pucie, wybranaRasa, umiejetnosci);

            //Generowanie podsumowania
            StringBuilder sb = new StringBuilder();
            sb.append("Podsumowanie postaci:\n\n");
            sb.append("Imię: ").append(postac.imie).append("\n");
            sb.append("Płeć: ").append(postac.pucie).append("\n");
            sb.append("Rasa: ").append(postac.rasa).append("\n");
            sb.append("Umiejętności: ");

            if (postac.umiejetnosci.isEmpty()) {
                sb.append("Brak");
            } else {
                sb.append(String.join(", ", postac.umiejetnosci));
            }

            wynik.setText(sb.toString());
        });
    }

    private int policzZaznaczone(CheckBox... boxes) {
        int licznik = 0;
        for (CheckBox box : boxes) {
            if (box.isChecked()) licznik++;
        }
        return licznik;
    }
