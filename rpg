<resources>
    <string name="app_name">KreatorPostaci</string>

    <string-array name="rasy_array">
        <item>Człowiek</item>
        <item>Elf</item>
        <item>Krasnolud</item>
        <item>Ork</item>
    </string-array>
</resources>




