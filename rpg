java:

package com.example.kreatorpostaci;

import androidx.appcompat.app.AppCompatActivity;
import android.os.Bundle;
import android.view.View;
import android.widget.*;
import java.util.ArrayList;

public class MainActivity extends AppCompatActivity {

    private EditText etImie;
    private RadioGroup rgPlec;
    private Spinner spRasa;

    private CheckBox cbWalka, cbMagia, cbKradziez;
    private Button btnStworz, btnReset;
    private TextView tvWynik, tvDruzyna;

    private ArrayList<Postac> druzyna = new ArrayList<>();
    private int maxUmiejetnosci = 2;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_main);

        etImie = findViewById(R.id.etImie);
        rgPlec = findViewById(R.id.rgPlec);
        spRasa = findViewById(R.id.spRasa);

        cbWalka = findViewById(R.id.cbWalka);
        cbMagia = findViewById(R.id.cbMagia);
        cbKradziez = findViewById(R.id.cbKradziez);

        btnStworz = findViewById(R.id.btnStworz);
        btnReset = findViewById(R.id.btnReset);

        tvWynik = findViewById(R.id.tvWynik);
        tvDruzyna = findViewById(R.id.tvDruzyna);

        // Spinner
        ArrayAdapter<CharSequence> adapter = ArrayAdapter.createFromResource(
                this,
                R.array.rasy_array,
                android.R.layout.simple_spinner_item
        );
        adapter.setDropDownViewResource(android.R.layout.simple_spinner_dropdown_item);
        spRasa.setAdapter(adapter);

        // limit 2 umiejętności
        View.OnClickListener limiter = v -> {
            int zaznaczone =
                    (cbWalka.isChecked() ? 1 : 0) +
                            (cbMagia.isChecked() ? 1 : 0) +
                            (cbKradziez.isChecked() ? 1 : 0);

            if (zaznaczone > maxUmiejetnosci) {
                ((CheckBox)v).setChecked(false);
                Toast.makeText(this, "Możesz wybrać maksymalnie 2 umiejętności!", Toast.LENGTH_SHORT).show();
            }
        };

        cbWalka.setOnClickListener(limiter);
        cbMagia.setOnClickListener(limiter);
        cbKradziez.setOnClickListener(limiter);

        btnStworz.setOnClickListener(v -> stworzPostac());
        btnReset.setOnClickListener(v -> resetuj());
    }

    private void stworzPostac() {
        String imie = etImie.getText().toString();
        if (imie.isEmpty()) {
            etImie.setError("Podaj imię");
            return;
        }

        int plecId = rgPlec.getCheckedRadioButtonId();
        if (plecId == -1) {
            Toast.makeText(this, "Wybierz płeć", Toast.LENGTH_SHORT).show();
            return;
        }
        RadioButton rb = findViewById(plecId);
        String plec = rb.getText().toString();

        String rasa = spRasa.getSelectedItem().toString();

        ArrayList<String> um = new ArrayList<>();
        if (cbWalka.isChecked()) um.add("Walka");
        if (cbMagia.isChecked()) um.add("Magia");
        if (cbKradziez.isChecked()) um.add("Kradzież");

        Postac p = new Postac(imie, plec, rasa, um);
        tvWynik.setText(p.generujPodsumowanie());

        druzyna.add(p);
        tvDruzyna.setText("Aktualna wielkość drużyny: " + druzyna.size());
    }

    private void resetuj() {
        etImie.setText("");
        rgPlec.clearCheck();
        spRasa.setSelection(0);

        cbWalka.setChecked(false);
        cbMagia.setChecked(false);
        cbKradziez.setChecked(false);

        tvWynik.setText("");
    }
}




postac.java:

package com.example.kreatorpostaci;

import java.util.ArrayList;

public class Postac {

    private String imie;
    private String plec;
    private String rasa;
    private ArrayList<String> umiejetnosci;
    private int sila;
    private int zrecznosc;

    public Postac(String imie, String plec, String rasa, ArrayList<String> umiejetnosci) {
        this.imie = imie;
        this.plec = plec;
        this.rasa = rasa;
        this.umiejetnosci = umiejetnosci;

        ustawBonusy();
    }

    private void ustawBonusy() {
        switch (rasa) {
            case "Krasnolud":
                sila = 12;
                zrecznosc = 8;
                break;
            case "Elf":
                sila = 8;
                zrecznosc = 12;
                break;
            case "Ork":
                sila = 13;
                zrecznosc = 7;
                break;
            case "Człowiek":
            default:
                sila = 10;
                zrecznosc = 10;
                break;
        }
    }

    public String generujPodsumowanie() {
        StringBuilder sb = new StringBuilder();
        sb.append("Imię: ").append(imie).append("\n");
        sb.append("Płeć: ").append(plec).append("\n");
        sb.append("Rasa: ").append(rasa).append("\n");
        sb.append("Statystyki:\n");
        sb.append("• Siła: ").append(sila).append("\n");
        sb.append("• Zręczność: ").append(zrecznosc).append("\n");
        sb.append("Umiejętności:\n");
        if (umiejetnosci.isEmpty()) sb.append("Brak\n");
        else {
            for (String u : umiejetnosci) sb.append("• ").append(u).append("\n");
        }
        return sb.toString();
    }
}




